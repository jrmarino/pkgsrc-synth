+# check for shm_open
+shm_open=no
+cat > $TMPC << EOF
+#include <sys/types.h>
+#include <sys/mman.h>
+#include <fcntl.h>
+#include <stddef.h> // for NULL
+
+int main(void)
+{
+    shm_open(NULL, O_RDWR, 0644);
+    return 0;
+}
+EOF
+if compile_prog "" "" ; then
+    shm_open=yes
+elif compile_prog "" "-lrt" ; then
+    LIBS="$LIBS -lrt"
+    shm_open=yes
+fi
+
