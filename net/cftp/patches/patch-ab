     char *user, *pass, *host, *port, *wdir;
 
-    if ((home=getenv("HOME")) == NULL)
+    if ((home=getenv("HOME")) == NULL || strlen(home) > sizeof(b)-9)
 	home = "";
     sprintf(b, "%s/.cftprc", home);
     
